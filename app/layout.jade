include jade/mixins/lipsum

doctype html
html(lang='pt')
  - var rand = function () { return Math.random().toString(36).replace(/[^a-z]+/g, '').substr(0, 5) }
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, user-scalable=no')
    link(href='styles/layout.css', rel='stylesheet')

  body#sfcss
    aside
      ul.list-unstyled.Sidebar.Sidebar--compact.u-posRelative
        mixin item-drop(title)
          li.dropdown.u-posStatic_.u-textNoWrap
            - var id = rand()
            .SubMenu-link.MenuTitulo(
              href='#'
              data-toggle='collapse'
              data-target='##{id}'
              aria-expanded='false')
                button.btn.btn-info.btn-square(role='button')
                  span.glyphicon.glyphicon-list.milli
                span.Box.SubMenu-label  #{title}
            .Sidebar-menu.collapse(id=id)
              .SubMenu-label
                .MenuTitulo.Box #{title}
              ul.list-unstyled.Box(class='+cut')
                li: a(href='#') Action
                li: a(href='#') Another action
                li: a(href='#') Something else here
                li: a(href='#') Separated link
        +item-drop('Calendário')
        +item-drop('Informações')
        +item-drop('Anexos')
    main
      header
        .Arrange.Arrange--middle.navbar--sf
          .Arrange-sizeFit
             button.btn.btn-square.delta
              i.fa.fa-bars
          .Arrange-sizeFill
          .Arrange-sizeFit.dropdown
            button#headerNotifications.btn.btn-square.delta.dropdown-toggle(
              data-toggle='dropdown',
              aria-haspopup='true',
              aria-expanded='false')
              i.fa.fa-bell.zeta
            span.badge.badge--unread.micro 2
            ul.dropdown-menu.pull-right(aria-labelledby='headerNotifications')
              li: a(href='#') Action
              li: a(href='#') Another action
              li: a(href='#') Something else here
              li: a(href='#') Separated link
      article
        p
        .container-fluid
          .row
            .col-md-6
              p: +lipsum(20, "sentences")
            .col-md-6
              p: +lipsum(20, "sentences")
          .row.spacer--xl
            .col-md-3
              p.Embed.Embed--3by2(class='+light')
              h4.text-muted: +lipsum(1, "sentences")
              p: +lipsum(5, "sentences")
            .col-md-3
              p.Embed.Embed--3by2(class='+light')
              h4.text-muted: +lipsum(1, "sentences")
              p: +lipsum(5, "sentences")
            .col-md-3
              p.Embed.Embed--3by2(class='+light')
              h4.text-muted: +lipsum(1, "sentences")
              p: +lipsum(5, "sentences")
            .col-md-3
              p.Embed.Embed--3by2(class='+light')
              h4.text-muted: +lipsum(1, "sentences")
              p: +lipsum(5, "sentences")
            .clearfix

            .col-md-6
              h3: +lipsum(1, "sentences")
              p: +lipsum(50, "sentences")
            .col-md-6
              h3: +lipsum(2, "sentences")
              .Embed.Embed--3by2(class='+light')

    script(src='jquery/dist/jquery.min.js')
    script(src='bootstrap/dist/js/bootstrap.min.js')
    script(src='scripts/layout.js')
