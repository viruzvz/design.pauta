.row
  .col-md-12
    .panel.panel-box.panel-default.panel-sf
      .panel-heading
        .Arrange
          .Arrange-sizeFit
            i.fa.fa-pencil
          .Arrange-sizeFill
            h2: strong Editar Fonte
          .Arrange-sizeFit
            .panel-actions
              a.btn-minimize(href='#collapse-box' data-toggle="collapse")
      .panel-body#collapse-box.in 

        form(name='adicionarLink-padrao')
          .form-group
            label(for='trabalho') 
              | Trabalho
              span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
            input#trabalho.form-control(name='trabalho', required) 
          .form-group
            label(for='cliente') 
              | Cliente
              span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
            .row
              .col-md-4
                select#cliente.form-control(name='cliente', required)
                  option(value='') Selecionar
                  option(value='Advocacia') Advocacia 
          .form-group
            label(for='contato') 
              | Contato
              span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
            input#contato.form-control(name='contato', required) 
          .form-group
            label(for='telefones') 
              | Telefones
              span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
            .row
              .col-md-6.col-sm-6
                input#telefones.form-control(type='text', name='telefones', required)
              .col-md-4.col-sm-4
                select#tipo-fone.form-control(name='tipo-fone', required)
                  option(value='') Selecionar
                  option(value='Ramal') Ramal 
              .col-md-2.col-sm-2
                button.btn.btn-success(type='button', name='adicionar', data-toggle='tooltip', title='Adicionar Item')
                  i.fa.fa-plus
                button.btn.btn-danger(type='button', name='remover', data-toggle='tooltip', title='Excluir Item')
                  i.fa.fa-times
          .form-group
            label(for='e-mails') 
              | E-mails
              span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
            .row
              .col-md-6.col-sm-6
                input#email.form-control(type='email', name='email', required)
              .col-md-4.col-sm-4
                select#tipo-email.form-control(name='tipo-email', required)
                  option(value='') Selecionar
                  option(value='Ramal') Comercial
              .col-md-2.col-sm-2
                button.btn.btn-success(type='button', name='adicionar', data-toggle='tooltip', title='Adicionar Item')
                  i.fa.fa-plus
                button.btn.btn-danger(type='button', name='remover', data-toggle='tooltip', title='Excluir Item')
                  i.fa.fa-times
          .form-group
            label(for='atendimento') 
              | Atendimento
              span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
            .row
              .col-md-4
                select#atendimento.form-control(name='atendimento', required)
                  option(value='') Selecionar
                  option(value='Andrea') Andrea 
          .form-group
            label(for='criacao') Criação 
          .form-group
            label(for='marketing') Marketing 
          .form-group
            label(for='producao') Produção
          .form-group
            label(for='cat-trabalho') 
              | Categoria do trabalho
              span(class='+red--color', data-toggle="tooltip", data-placement="top", title="Item Obrigatório") *
            .row
              .col-md-4
                select#cat-trabalho.form-control(name='cat-trabalho', required)
                  option(value='') Selecionar
                  option(value='Utilidade Publica') Utilidade Pública 
          .form-group
            .checkbox
              label
                input(type='checkbox')
                | Prioridade
          .form-group
            label(for='end-rede') Endereço na rede
            input#end-rede.form-control(type='text', name='end-rede') 
          .form-group
            .row
              .col-md-3.col-xs-8
                label(for='data-ent-comap') Data de entrada na COMAP
                .input-group.date(data-provide='datepicker', data-date-format="dd/mm/yyyy")
                  input#data-ent-comap.form-control(type='text', placeholder='dd/mm/aaaa', required)
                  .input-group-addon
                    span.fa.fa-calendar
          .form-group
            .row
              .col-md-3.col-xs-8
                label(for='prev-saida') Previsão de saída
                .input-group.date(data-provide='datepicker', data-date-format="dd/mm/yyyy")
                  input#prev-saida.form-control(type='text', placeholder='dd/mm/aaaa')
                  .input-group-addon
                    span.fa.fa-calendar
         
                      
          .form-group.pull-right
            button.btn.btn-primary(type='submit') Editar
            &nbsp;
            a.btn.btn-default(href='paginaInicial--itemPautaGeral.html', data-dismiss='modal') Cancelar

