.panel.panel-box.panel-default.panel-sf
  .panel-heading
    .Arrange
      .Arrange-sizeFit
        i.fa.fa-lightbulb-o
      .Arrange-sizeFill
        h2: strong Comap
      .Arrange-sizeFit
        .panel-actions
          a.btn-minimize(href='#collapse-box' data-toggle="collapse")
  .panel-body#collapse-box.in 
    include ../partials/navbar-nav--secundaria
    // Nav tabs
    ul.nav.nav-tabs(role='tablist')
      li.active(role='presentation')
        a(href='#emAndamento', aria-controls='emAndamento', role='tab', data-toggle='tab') Em Andamento
      li(role='presentation')
        a(href='#encerrados', aria-controls='encerrados', role='tab', data-toggle='tab') Encerrados
    // Tab panes
    .tab-content
      #emAndamento.tab-pane.active(role='tabpanel')
        .row
          .col-md-4
            .Box.Box--lg.Box--y
              form
                .row
                  .col-sm-2.col-xs-2
                    .form-group
                      label.control-label.milli(for='quantidade') Linhas:
                  .col-sm-4.col-xs-4
                    .form-group
                      select.form-control.input-xs
                        option 1
                        option 2
                        option 3
                        option 4
                        option 555
                  .col-sm-6.col-xs-12
                    .form-group
                      .input-group
                        input.form-control.input-xs(type='text', placeholder='Buscar')
                        span.input-group-btn
                          button.btn.btn-info.btn-xs(type='button')
                            i.glyphicon.glyphicon-search




          .col-md-8.text-right
            .form-group
              mixin btn-impress(title, classe, icon, name)
                button.btn.btn-xs(type='button', title='#{title}', data-toggle='tooltip', class='#{classe}') 
                  i.fa(class='#{icon}')
                  |  #{name} 
              .Box.Box--lg.Box--y
                .btn-block
                  +btn-impress('Imprimir', 'btn-default', 'fa-print', 'Imprimir')
                  +btn-impress('', 'btn-success', 'fa-plus', 'Criar Trabalho')

        .table-responsive
          mixin thead(head1, head2, head3, head4, head5, head6, head7, head8, head9)
            thead
              tr
                th #{head1}
                th #{head2}
                th #{head3}
                th #{head4}
                th #{head5}
                th #{head6}
                th #{head7}
                th #{head8}
                th #{head9}
          mixin tr(alert, cond1, cond2, cond3, cond4, cond5, cond6, cond7, cond8, cond9)
            tr(class='#{alert}')
              td #{cond1}
              td #{cond2}
              td #{cond3}
              td #{cond4}
              td #{cond5}
              td #{cond6}
              td #{cond7}
              td #{cond8}
              td #{cond9}

                

          // Manhã
          table.table.table-striped.table-hover.milli
            +thead('Trabalho', 'Cliente', 'Atendimento', 'Marketing', 'Criação', 'Produção', 'Status', 'Entrada', 'Checkpoint')
            tbody
              +tr('', '16 dias de ativismo', 'Procuradoria da Mulher', 'Roberta', '', 'Marcelo', '', 'Criação', '09/09/2016', '10/10/2017')
              +tr('', '16 dias de ativismo', 'Procuradoria da Mulher', 'Roberta', '', 'Marcelo', '', 'Criação', '09/09/2016', '10/10/2017')
              +tr('danger', '16 dias de ativismo', 'Procuradoria da Mulher', 'Roberta', '', 'Marcelo', '', 'Criação', '09/09/2016', '10/10/2017')
              +tr('', '16 dias de ativismo', 'Procuradoria da Mulher', 'Roberta', '', 'Marcelo', '', 'Criação', '09/09/2016', '10/10/2017')
              +tr('', '16 dias de ativismo', 'Procuradoria da Mulher', 'Roberta', '', 'Marcelo', '', 'Criação', '09/09/2016', '10/10/2017')



      #encerrados.tab-pane(role='tabpanel') 
