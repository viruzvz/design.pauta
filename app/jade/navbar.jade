.ArrangeFlex.ArrangeFlex--middle.navbar--sf.u-spacer--xl
  .ArrangeFlex-sizeFit
    ul.nav.navbar-nav.navbar-left.navbar-nav--md
      li: a#main-menu-toggle.navbar-action.zeta.navbar-action--main(href='#')
        i(class='+senado').fa.fa-bars
  .ArrangeFlex-sizeFill
    mixin search
      form
        .form-group.form-group--search
          .input-group
            .input-group-addon.input-group-addon--search
              span.fa.fa-search
            input.form-control.form-control--search(type='email' placeholder='Busca')
    ul.nav.navbar-nav.navbar-left.navbar-nav--md.hidden-xs
      li
        .navbar-form.navbar-left.navbar-form--md
            +search
  .ArrangeFlex-sizeFit.dropdown
    .col-md-12
      ul.nav.navbar-nav.navbar-nav--md.navbar-right
        li.dropdown
          a.navbar-action.zeta.dropdown-toggle(href='#', data-toggle='dropdown')
            span.seta-dropdown-menu.hidden-xs
            i.fa.fa-th
            span.badge.badge--unread.micro 2
          ul.dropdown-menu.dropdown-menu--bar.dropdown-menu--lg
            li.Box.Box--lg.zeta(class="+white +senado")
              i.fa.fa-th
              strong  Tarefas
            mixin item( date, texto, user, href, label, status)
              div
                p
                  small #{date}
                  if label
                    span.label.pull-right(class="#{status}") #{label}
                  else
                p
                  if href
                    a(href=href) #{texto}
                  else
                    | #{texto}
                p: small #{user}
            mixin botoes(href, icon, texto)
              li(class="+white")
                a.normalis(href='#{href}' class="+senado")
                  .Box.Box--y
                    i(class='#{icon}').fa 
                    strong  #{texto}
            li.Box.Box--lg.CutHere.scroll
              +item('01/12/2016', 'Relação de senadores está no item "COP 21 2015" na área de grandes Temas.', 'Renina Sangermano Valejo','google.com','', '')
              +item('26/11/2016', 'Acabei de falar com a Taís, da CRE, e a reunião está mesmo cancelada.', 'Sabrina Mancio','','', '')
            +botoes('criarItemPauta.html', 'fa-plus', 'Criar item de pauta')
            +botoes('criarItemProducao.html', 'fa-plus', 'Criar item de produção')
            // +botoes('/endereço', 'fa-cog', 'Configurações')
        li.dropdown
          a.navbar-action.zeta.dropdown-toggle(href='#', data-toggle='dropdown')
            span.seta-dropdown-menu.hidden-xs
            i.fa.fa-calendar
          ul.dropdown-menu.dropdown-menu--bar.dropdown-menu--lg
            li(class="+white")
              .Box.Box--lg
                .datepicker(data-date='12/03/2012')
                input(type='hidden')
        li.dropdown
