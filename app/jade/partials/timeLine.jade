.graph
  .legenda.text-right
    .timeslot-icon
      i.fa.fa-clock-o
    | andamento
    .timeslot-icon
      i.fa.fa-map-marker
    | checkpoint
  .timeline
    mixin timeslot(nome, detalhes, button, icon, title, date, time)
      .timeslot
        .task
          span
            span.type 
              .Flag
                .Flag-figure.Flag-Figure--maxwidth-xs
                  img.img-responsive.img-circle(src='../../img/avatar.jpg')
                .Flag-body
                  a(href='editarPerfil.html')
                    small #{nome} 
            span.details
              | #{detalhes} 
              br
              if button
                  button.btn.btn-info.btn-xs(type='button', data-toggle='modal',)  #{button}
              else
          .arrow 
        .timeslot-icon
          i.fa(class='#{icon}' data-toggle='tooltip', title='#{title}')
        .time
          .date-a #{date} 
          .time-b #{time} 
    
    mixin timeslotAlt(nome, detalhes, button, icon, title, date, time)
      .timeslot.alt
        .task
          span
            span.type
              .Flag
                .Flag-figure.Flag-Figure--maxwidth-xs
                  img.img-responsive.img-circle(src='../../img/avatar.jpg')
                .Flag-body
                  a(href='editarPerfil.html')
                    small #{nome} 
            span.details
              | #{detalhes} 
              br
              if button
                  button.btn.btn-info.btn-xs(type='button', data-toggle='modal',)  #{button}
              else
          .arrow      
        .timeslot-icon
          i.fa(class='#{icon}' data-toggle='tooltip', title='#{title}')
        .time
          .date-a #{date} 
          .time-b #{time}

