.panel.panel-default
  .s-bar.s-bar--background
    .ArrangeFlex
      .ArrangeFlex-sizeFit.Box.Box--lg
        i.fa.fa-home
      .ArrangeFlex-sizeFill.Box--y.Box--lg
        h2.milli.s-bar--text
          strong Página Inicial
      .ArrangeFlex-sizeFit.Box--y.Box--lg.s-bar--columnLeft
        a.toggle.eta.btn-sBar(href='#collapse-box' data-toggle="collapse" aria-expanded='true')
          i.fa.fa-chevron-up
          i.fa.fa-chevron-down
  .panel-body#collapse-box.in
    // Nav tabs
    ul.nav.nav-tabs(role='tablist')
      li.active(role='presentation')
        a(href='#pautadia', aria-controls='pautadia', role='tab', data-toggle='tab') Pautas do dia
      li(role='presentation')
        a(href='#pautafutura', aria-controls='pautafutura', role='tab', data-toggle='tab') Pautas futuras
    // Tab panes
    .tab-content
      #pautadia.tab-pane.active(role='tabpanel')
        .row
          .col-md-4
            .Box.Box--lg.Box--y
              form.form-group
                .input-group.date(data-provide='datepicker', data-date-format="dd/mm/yyyy")
                  input#dataPublicacao.form-control(type='text', placeholder='dd/mm/aaaa')
                  .input-group-addon
                    span.fa.fa-calendar

          .col-md-8.text-right
            mixin btn-impress(title, icon, name)
              button.btn.btn-xs.btn-default(type='button', title=title, data-toggle='tooltip')
                i.fa(class=icon)
                |  #{name}
            .Box.Box--lg.Box--y
              form.form-group
                .btn-block
                  +btn-impress('Imprimir', 'fa-print', 'Imprimir')

        table.table.table-striped.table-hover.milli.table-rp
          caption
            ul.list-unstyled.list-inline.text-right
              mixin legenda(icon, text)
                li
                  .fa(class= icon)
                  = text
              +legenda('fa-users', 'Agência')
              +legenda('fa-commenting-o', 'Comunicação Interna')
              +legenda('fa-camera', 'Fotografia')
              +legenda('fa-microphone', 'Rádio')
              +legenda('fa-television', 'TV')
          thead
            tr
              th Hora
              th Editoria
              th Assunto
              th Veículos
          tbody
            mixin btn(href, title, btn, fa, badge)
              .Box--sm.pull-left
                a.btn.btn-xs.btn-tooltip(href=href, title=title, class= btn, data-toggle='modal', data-target="#veiculos")
                  .fa(class=fa)
                  if badge
                    .Box--sm.Box--x.pull-right
                      .badge.badge-fix
                        =badge
            tr.text-left
              td(data-th='Hora')
                | 10h00
              td(data-th='Editoria')
                | Senado
              td(data-th='Assunto')
                a(href='paginaInicial--itemPautaGeral.html') Lorem ipsum dolor sit amet, consectetur adipisicing elit
              td(data-th='Veículos')
                +btn('#', 'Agência', 'btn-warning', 'fa-users', '5')
                +btn('#', 'Rádio', 'btn-warning', 'fa-microphone', '1')
                +btn('#', 'Comunicação Interna', 'btn-danger', 'fa-commenting-o', '2')
                +btn('#', 'TV', 'btn-default', 'fa-television', '6')
            tr.text-left
              td(data-th='Hora')
                | 11h00
              td(data-th='Editoria')
                | Senado
              td(data-th='Assunto')
                a(href='#') Lorem ipsum dolor sit amet, consectetur adipisicing elit
              td(data-th='Veículos')
                +btn('#', 'Comunicação Interna', 'btn-danger', 'fa-commenting-o', '2')
                +btn('#', 'Rádio', 'btn-danger', 'fa-microphone', '1')
            tr.text-left
              td(data-th='Hora')
                | 11h00
              td(data-th='Editoria')
                | Senado
              td(data-th='Assunto')
                a(href='#') Lorem ipsum dolor sit amet, consectetur adipisicing elit
              td(data-th='Veículos')
                +btn('#', 'TV', 'btn-warning', 'fa-television', '6')
                +btn('#', 'Rádio', 'btn-danger', 'fa-microphone', '1')

      #pautafutura.tab-pane(role='tabpanel') ...
include ../modais/veiculos
